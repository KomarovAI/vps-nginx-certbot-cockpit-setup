# Marzban Official Container Configuration v4.1

# Domain configuration
DOMAIN_NAME=your-domain.com

# Marzban panel configuration
MARZBAN_PANEL_PORT=8000

# Xray configuration
XRAY_PORT=2083

# Reality configuration (optional - will be auto-generated if not provided)
# XRAY_REALITY_PRIVATE_KEY=
# XRAY_REALITY_PUBLIC_KEY=
# XRAY_REALITY_SHORT_IDS=
XRAY_REALITY_SERVER_NAMES=google.com,www.google.com

# Database configuration (standard official image path)
MARZBAN_DB_URL=sqlite:////var/lib/marzban/db.sqlite3

# Xray JSON config path (standard official image path)
XRAY_JSON=/etc/xray/config.json

# Additional Marzban settings
MARZBAN_QUIC=true

# Protocol settings
XRAY_VLESS_REALITY=true
XRAY_GRPC_ENABLE=true

# Optional: Auto-create admin user on first start
# MARZBAN_ADMIN_USERNAME=admin
# MARZBAN_ADMIN_PASSWORD=your-secure-password