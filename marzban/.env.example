# Marzban Configuration Example
# Copy this file to .env and adjust values as needed

# Domain Configuration
DOMAIN_NAME=your-domain.com
MARZBAN_PANEL_PORT=8000

# XRay Configuration
XRAY_PORT=2083
XRAY_REALITY_PRIVATE_KEY=
XRAY_REALITY_PUBLIC_KEY=
XRAY_REALITY_SHORT_IDS=
XRAY_REALITY_SERVER_NAMES=google.com,www.google.com

# Database Configuration (using standard Marzban path)
# Use SQLALCHEMY_DATABASE_URL for better compatibility
SQLALCHEMY_DATABASE_URL=sqlite:////var/lib/marzban/db.sqlite3

# Legacy database URL (fallback)
MARZBAN_DB_URL=sqlite:////var/lib/marzban/db.sqlite3

# Additional Marzban settings
MARZBAN_QUIC=true
XRAY_VLESS_REALITY=true
XRAY_GRPC_ENABLE=true

# Optional: Admin user credentials for auto-creation
# MARZBAN_ADMIN_USERNAME=admin
# MARZBAN_ADMIN_PASSWORD=your-secure-password